<%= form_with model: product, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Nhập tên sản phẩm" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.rich_text_area :description, class: "form-control", placeholder: "Nhập mô tả sản phẩm" %>
  </div>

  <div class="form-group">
    <%= form.label :featured_image, class: "form-label" %>
    <%= form.file_field :featured_image, accept: "image/*", class: "form-control-file" %>
  </div>

  <div>
  <%= form.label :inventory_count, style: "display: block" %>
  <%= form.number_field :inventory_count %>
</div>

  <div class="form-group">
    <%= form.submit "Lưu sản phẩm", class: "btn btn-primary" %>
  </div>
<% end %>